# авто-нормализация
* text=auto

# исходники — LF
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.pro text eol=lf
*.pri text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf
*.ui text eol=lf
*.qrc text eol=lf
*.qml text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.txt text eol=lf
*.md text eol=lf

# windows-скрипты — CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# бинарники
*.png binary
*.jpg binary
*.ico binary
*.pdf binary
*.zip binary
*.7z binary
